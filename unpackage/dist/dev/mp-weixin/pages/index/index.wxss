.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.nav text {
  font-size: 30rpx;
}
.nav .nav_item {
  width: 25%;
  text-align: center;
}
.nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  color: white;
  background: #4682B4;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  font-size: 70rpx;
  margin: 10px auto;
  line-height: 120rpx;
}
.hot_books {
  background: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.hot_books .title {
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #4682B4;
  letter-spacing: 40rpx;
  background: #FFF;
  margin: 7rpx 0px;
}
.books_list {
  padding: 0px  10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.books_item {
  background: #fff;
  width: 355rpx;
  margin: 10rpx 0;
  font-size: 30rpx;
}
.books_item image {
  width: 100%;
  height: 150px;
}

